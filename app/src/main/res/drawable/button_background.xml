<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#17A434"/>
            <corners
                android:radius="100dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners
                android:radius="100dp" />
            <gradient
                android:angle="45"
                android:centerX="35%"
                android:endColor="#17A434"
                android:startColor="#17A434"
                android:type="linear" />
        </shape>
    </item>
</selector>